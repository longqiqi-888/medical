/**index.wxss**/
page{
    background-color:#ECECEC;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

/* 头部 */
.header-img{
    /* padding-top: ; */
    width: 100%;
    height: 200rpx;
}

.container {
  margin: 10rpx 0;
  background-color: #fff;
  height: 180rpx; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding:  10rpx 30rpx;
  box-sizing: border-box;
}  

/* 功能栏 */
.container{
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: center; */
}
.con-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.con-img{
    width: 100rpx;
    height: 100rpx;
}
.con-text{
    font-size: 24rpx;

}

/* 附近医院样式 */
.doc-container{
    margin-top: 20rpx;
    background-color: #fff;
    border: 1px solid #eee;
    border-radius: 30rpx;
}
.doc-title{
    font-size: 34rpx;
    line-height: 34px;
    padding-left: 20rpx;
    border-bottom: 1px solid #eee;
}
.doc-item{
    display: flex;
    padding: 10rpx 20rpx;
}

.doc-img{
    width: 200rpx;
    height: 200rpx;
}

.doc-info{
    /* font-size: 20rpx; */
}

.doc-info-name{
    margin-top: 20rpx;
    font-size: 34rpx;
}

.doc-info-add{
    font-size: 30rpx;
    color: rgb(122, 122, 122);
    margin-top: 15rpx;
}