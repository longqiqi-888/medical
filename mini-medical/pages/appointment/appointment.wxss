/* pages/appointment/appointment.wxss */
.appointment{
    height: 100%;
}
.title{
    height: 80rpx;
    background-color: #fff;
    line-height: 80rpx;
    margin: 10rpx;
    padding-left: 20rpx;
    font-size: 32rpx;

}
.container{
    display: flex;
    height: 100%;
    
}
.container-left{
    flex: 2;
}
ul{
    display: flex;
    flex-direction: column;
    /* width: 250rpx; */
    /* background-color: #fff; */

}
ul>li{
    display: flex;
    align-items: center;
    width: 100%;
    height: 80rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    border-bottom: 1rpx solid rgb(230, 230, 230);
}

.container-right{
    flex: 3;
    background-color: #fff;
    min-height: 1100rpx;
}

ul>li>button{
    /* font-size: 14rpx; */
    width: 120rpx;
    height: 55rpx;
}
.container-right .btn{
    font-size: 25rpx;
    color: #fff;
    background-color: #5EB6D8;
    margin-left: 200rpx;
}